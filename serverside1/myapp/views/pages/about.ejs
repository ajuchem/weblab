<!-- views/pages/about.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <!-- Call the ejs include command and provide the path to the
         partial to include. Path is relative to this file -->

    <!-- Include our head.ejs file -->
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <!-- Include the header of the page -->
      <% include ../partials/header %>
    </header>

    <h3>I'm awesome because:</h3>
    <ul>
      <% reasons.forEach(function(reason) { %>
        <li><%= reason.reason %></li>
      <% }); %>
    </ul>
    <form class="" action="/about" method="post">
      <label for="myReason">More reasons:</label>
      <input type="text" name="myReason" id="myReason">
      <button type="submit">Add</button>
    </form>

    <!-- Include the footer of the page -->
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
